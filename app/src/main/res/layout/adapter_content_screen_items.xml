<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_content_list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_content_single_list_item"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_content_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@android:color/black"/>

            <LinearLayout
                android:id="@+id/ll_content_right_side"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:id="@+id/tv_content_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="video tile will goes here"/>

                <TextView
                    android:id="@+id/tv_content_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="description"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/tv_views"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:lines="1"
                    android:text="Views : 0"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:textSize="15sp"/>

                <RatingBar android:id="@+id/rb_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:layout_gravity="center_horizontal"
                    android:numStars="5"
                    style="@style/CustomRatingSmall" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/bt_comment"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:text="Comment"
                        android:textSize="12sp"
                        android:layout_weight="1.2"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:background="@drawable/button_curve_edges"/>

                    <Button
                        android:id="@+id/bt_view_comment"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:text="View Comments"
                        android:textSize="12sp"
                        android:layout_weight="1.8"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:background="@drawable/button_curve_edges"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/bt_rate"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:text="Rate"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:background="@drawable/button_curve_edges"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="4"
                        android:gravity="right">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@drawable/circle">
                            <ImageView
                                android:id="@+id/iv_content_attachment"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_attachment" />

                        </RelativeLayout>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="15dp"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@drawable/circle">
                            <ImageView
                                android:id="@+id/iv_content_share"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/share_icon"
                                />

                        </RelativeLayout>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="15dp"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@drawable/circle">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/favorite_icon"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="15dp"/>
                        <RelativeLayout android:id="@+id/rl_bookmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@drawable/circle">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/bookmark_icon"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
