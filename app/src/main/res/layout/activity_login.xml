<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mybackground"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/top_banner"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/banner_photo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/top_banner">
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/ll_login"
            android:background="@drawable/logo" />
        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_design"
                android:hint="Email"
                android:textStyle="normal"
                android:textColor="@android:color/white"
                android:textColorHint="#cccccc"
                android:drawableLeft="@drawable/user_icon"
                android:drawablePadding="5dp"
                />

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_design"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="#cccccc" />

            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_design"
                android:text="SignIn"
                android:drawableBottom="@drawable/login_arrow"
                android:textAlignment="center"
                android:textColor="@android:color/white"

                />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_or_login_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="-Or Login With -"
            android:textColor="#cccccc"/>


        <LinearLayout
            android:id="@+id/ll_social_login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_or_login_with"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_fb"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/fb_icon" />

            <ImageView
                android:id="@+id/iv_google"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/google_plus" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_create_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_social_login"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create Account"
                android:textColor="#cccccc" />

            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="#cccccc"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>